
<div class="container-class" style="margin: 20px; border: 2px solid #018a79; text-align: center; height: auto;">
<div class="container-course-info">
<div class="course-img">
  <% if @course.photo.attached? %>
    <%= cl_image_tag @course.photo.key, id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
  <% else %>
    <img src="https://res.cloudinary.com/dgmgwjok1/image/upload/c_scale,q_100,w_300/v1603823158/dane-wetton-t1NEMSm1rgI-unsplash_vyigoa.jpg" alt="course-image">
  <% end %>
