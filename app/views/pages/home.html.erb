<div id="search-bar">
  <div class="background-image" style="background-image: url(<%= asset_path'landing_background.jpg'%>)">
    <div class="bold-logo-div d-flex justify-content-center">
      <img class="bold-logo" id="fade-in" src="https://res.cloudinary.com/dolfny7hf/image/upload/v1603809296/Bold_est1tz.png" alt="bold-logo">
    </div>

     <!-- SEARCH BAR   -->
      <div class="search-bar-div d-flex justify-content-center">
        <%= form_tag root_path(anchor: 'search-results'), method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "search-bar-input",
            placeholder: "Find a Class"
          %> <%= submit_tag "Search", class: "btn btn-ghost" %>
        <% end %>
      </div>
  </div>
</div>
<div id='search-results' class="m-2">
  <div style="display: flex;">
    <div id="course-card-div" class="height: 200px; overflow-auto">
  <!--     <div class="course-card-row"> -->
       <% @courses.each do  |course| %>
        <div class="card-course">

          <img src="https://res.cloudinary.com/dgmgwjok1/image/upload/c_scale,q_100,w_300/v1603823158/dane-wetton-t1NEMSm1rgI-unsplash_vyigoa.jpg" alt="course-image">
            <div class="card-course-infos">
              <h2><%= course.name %></h2>
              <p><%= course.user.name %></p>
            </div>
            <div class="button-link-to">
              <div class="link-to"><%= link_to 'details', course_path(course), class: "btn btn-outline-success" %></div>
            </div>
      </div>
       <% end %>
      <!-- </div> -->
    </div>

    <div id="map"
         style="width: 50%; margin-left: 20px; height: 100vh; top: 0; position: sticky; object-fit: cover;"
         data-markers='<%= @markers.to_json %>'
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>





