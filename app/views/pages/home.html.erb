<div id="search-bar">
  <div class="background-image" style="background-image: url(<%= asset_path'landing_background.jpg'%>)">
    <div class="bold-logo-div">
      <img class="bold-logo" src="https://res.cloudinary.com/dolfny7hf/image/upload/v1603809296/Bold_est1tz.png" alt="bold-logo">
    </div>

      <div class="search-bar-div">
        <form class="search-form">
          <input class="search-bar" type="search" placeholder="Type of Yoga">
        <a class="btn btn-ghost" href="#">Search</a>
        </form>
      </div>
  </div>
</div>

<div class="m-2">
  <div style="display: flex;">
    <div id="course-card-div">
  <!--     <div class="course-card-row"> -->
       <% @courses.each do  |course| %>
        <div class="card-course">

          <img src="https://res.cloudinary.com/dgmgwjok1/image/upload/c_scale,q_100,w_300/v1603823158/dane-wetton-t1NEMSm1rgI-unsplash_vyigoa.jpg" alt="course-image">
            <div class="card-course-infos">
              <h2><%= course.name %></h2>
              <%= link_to 'details', course_path(course), class: "btn btn-outline-success" %>
            </div>
        </div>
       <% end %>
      <!-- </div> -->
    </div>

    <div id="map"
         style="width: 50%; margin-left: 20px; height: 100vh; top: 0; position: sticky; object-fit: cover;"
         data-markers='<%= @markers.to_json %>'
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>



  </div>

</div>





